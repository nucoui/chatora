{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"],
      "@root/*": ["./*"]
    },
    "types": ["./types/JSX.namespace.d.ts", "@types/node"],
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src", "types"]
}
